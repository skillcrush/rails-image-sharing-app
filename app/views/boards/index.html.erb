<div class="header">
  <h1>
  <i class="fa fa-bookmark"></i>
    Boards:</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= link_to 'Show', board %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_board_path %>